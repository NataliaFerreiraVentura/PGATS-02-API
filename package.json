{
  "name": "pgats-api",
  "version": "1.0.0",
  "description": "Esta API permite registrar usuários, realizar login, consultar usuários e efetuar transferências de valores entre usuários. O banco de dados é em memória, ideal para estudos de automação e testes de API.",
  "main": "app.js",
  "scripts": {
    "start-graphql": "node graphql/server.js",
    "test": "mocha test/**/*.test.js --timeout 10000 --reporter mochawesome",
    "test-external-rest": " mocha test/rest/external/**/*.test.js --timeout 10000 --reporter mochawesome",
    "test-external-graphql": "mocha test/graphql/external/**/*.test.js --timeout 10000 --reporter mochawesome",
    "test-controller-rest": "mocha test/rest/controller/**/*.test.js --timeout 10000 --reporter mochawesome",
    "test-controller-graphql": "mocha test/graphql/controller/**/*.test.js --timeout 10000 --reporter mochawesome",
    "start-rest": "node server.js",
    "start:port3001": "set PORT=3001 && node server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "express": "^4.18.2",
    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "allure-commandline": "^2.34.1",
    "allure-mocha": "^3.4.1",
    "chai": "4.5.0",
    "chai-exclude": "^2.1.1",
    "dotenv": "^17.2.2",
    "mocha": "^11.7.2",
    "mochawesome": "^7.1.3",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
